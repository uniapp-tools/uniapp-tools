{
  "name": "@mc/monorepo",
  "version": "0.0.3",
  "private": true,
  "type": "module",
  "description": "",
  "packageManager": "pnpm@8.7.6",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "nr stub",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "build": "rimraf packages/*/dist --glob && pnpm -r --filter=./packages/* run build",
    "release": "bumpp -r",
    "publish": "pnpm -r publish --filter=./packages/**"
  },
  "author": "zoudy",
  "license": "MIT",
  "devDependencies": {
    "@mc/cli": "workspace:*",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "bumpp": "^9.2.1",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.0",
    "mc": "workspace:*",
    "rimraf": "^5.0.5",
    "typescript": "*",
    "unbuild": "^2.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "eslint --cache --fix"
    ]
  }
}
